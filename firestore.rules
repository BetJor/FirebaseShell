
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allows read and write access for all authenticated users.
    // This is a permissive rule for development and should be refined
    // for production with more specific rules for each collection.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
