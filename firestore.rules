
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla per defecte: Només permet l'accés als usuaris autenticats.
    // Això permet que les Server Actions (que s'executen en un context autenticat)
    // puguin escriure a la base de dades (p. ex., per a afegir comentaris del sistema).
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
