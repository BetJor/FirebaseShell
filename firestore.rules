rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Les dades mestres són de només lectura per a tothom
    match /actionTypes/{id} { allow read: if true; allow write: if false; }
    match /categories/{id} { allow read: if true; allow write: if false; }
    match /subcategories/{id} { allow read: if true; allow write: if false; }
    match /affectedAreas/{id} { allow read: if true; allow write: if false; }
    match /locations/{id} { allow read: if true; allow write: if false; }
    
    // Els usuaris poden llegir el seu propi document i els administradors poden llegir-los tots
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    match /actions/{actionId} {
      // Regles dinàmiques basades en els camps `readers` i `authors`
      allow read: if request.auth.token.email in resource.data.readers;
      allow create: if request.auth != null; // Qualsevol usuari autenticat pot crear
      allow update: if request.auth.token.email in resource.data.authors;

      // Un administrador pot fer-ho tot
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Regles per a la configuració de l'aplicació (prompts, etc.)
    match /app_settings/{docId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Galeria de prompts: accessible per a tots els usuaris autenticats
    match /prompt_gallery/{promptId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
  }
}
