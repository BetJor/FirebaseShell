
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /actions/{actionId}/{allPaths=**} {
      // Allow create for any authenticated user. 
      // WARNING: This is a less secure rule for development purposes.
      allow create: if request.auth != null && request.resource.size < 5 * 1024 * 1024;

      // Allow read for any authenticated user.
      allow read: if request.auth != null;

      // Allow delete for authenticated users.
      // You might want to restrict this further.
      allow delete: if request.auth != null;
    }
  }
}
